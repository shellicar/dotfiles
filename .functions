pkg_size(){
	apk info -es $(apk info -a) | \
    sed -e ':a' -e 'N' -e '$!ba' -e 's/\n\([0-9]\)/\1/g' | \
    sed -e ':a' -e 'N' -e '$!ba' -e 's/\n\n/\n /g' | \
    sed 's/\(.*\):\([0-9]*\)/\2 \1/g' | \
    sort -n
}

tm(){
    if [ $# -eq 0 ]; then
        if tmux list-s; then
            tmux a
        else
            tmux
        fi
    else
        tmux "$@"
    fi
}

